<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/biabxh"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/anh_bia" />

        <LinearLayout
            android:layout_marginLeft="120dp"
            android:layout_marginRight="55dp"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tentruyen_bxh"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:text="Thiet kiem si hoi quy" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/luotxem_bxh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:drawableLeft="@drawable/baseline_remove_red_eye_24"
                android:text="8213" />
        </LinearLayout>

        <ImageView
            android:layout_marginLeft="360dp"
            android:layout_marginTop="55dp"
            android:id="@+id/top_bxhhh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gold" />

    </androidx.cardview.widget.CardView>
</LinearLayout>