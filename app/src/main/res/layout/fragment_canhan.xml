<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="35dp"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    tools:context=".fragment.CanhanFragment"
    android:background="@drawable/nen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anhdaidien"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/anhdaidien" />

        <TextView
            android:id="@+id/nameuser"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:text="_ _ _ _ _ _" />
    </LinearLayout>

    <TableLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Độ Tu Luyện"
                android:textSize="25dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cấp Độ"
                android:layout_gravity="center"
                android:textSize="25dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp" >

            <TextView
                android:id="@+id/textViewSoChap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_ _ _ _"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textViewCapDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_ _ _ _"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </TableRow>

    </TableLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Truyện Đang Theo Dõi"
        android:textSize="23dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <GridView
            android:id="@+id/listtheodoi"
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>



    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/buttonTDTT"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Thay Đổi Thông Tin"
        android:textSize="17dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/buttonDangXuat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Đăng Xuất" />

</LinearLayout>