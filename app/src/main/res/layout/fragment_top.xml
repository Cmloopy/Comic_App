<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TopFragment"
    android:layout_marginBottom="65dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:background="@drawable/n">

        <TextView
            android:id="@+id/textBXHTOP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="27dp"
            android:textStyle="normal"
            android:text="Bảng Xếp Hạng" />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="27dp"
            android:drawableRight="@drawable/trophy"
            android:drawableLeft="@drawable/trophy"
            android:text=" Top Đọc Truyện " />
    </LinearLayout>

    <ListView
        android:id="@+id/topdoctruyen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>